CHARMENU:
TAB=1
ON RASTER OFF
PALETTE 7,,%111111,%101010,%010101
PALETTE 6,,%110000,%000000,
SPRITE OFF
COPY ROM(2),SIZE(2) TO $8000
BG SOURCE ROM(3)
CALL READPAGE
CALL READPAL
CALL DRAWCHARMENU
WAIT 20

OLDX=-1
OLDY=-1

DO
  IF TOUCH THEN
    X=TOUCH.X\8
    Y=TOUCH.Y\8
    IF X<>OLDX OR Y<>OLDY THEN

      GOSUB CHECKTABBAR

      '** CHAR **
      IF X>=1 AND X<=16 AND Y>=1 AND Y<=4 THEN
        IF OLDX=-1 THEN
          SELCHAR=((Y-1)*16)+(X-1)+SELPAGE*64
          SELW=0
          SELH=0
          CALL DRAWCHARNUM
          DRAGX=X
          DRAGY=Y
        ELSE
          SELW=MAX(X-DRAGX,0)
          SELH=MAX(Y-DRAGY,0)
          CALL DRAWCHARNUM
        END IF
      END IF

      '** PAGE **
      IF X>=17 AND X<=18 THEN
        IF Y>=1 AND Y<=2 AND SELPAGE>0 THEN
          SELPAGE=SELPAGE-1
          CALL READPAGE
          CALL DRAWCHARNUM
        END IF
        IF Y>=3 AND Y<=4 AND SELPAGE<3 THEN
          SELPAGE=SELPAGE+1
          CALL READPAGE
          CALL DRAWCHARNUM
        END IF
      END IF

      '** PAL **
      IF Y>=7 AND Y<=8 THEN
        IF X>=1 AND X<=3 THEN
          SELPAL=SELPALPAGE*4+0
          CALL DRAWPAL
        END IF
        IF X>=5 AND X<=7 THEN
          SELPAL=SELPALPAGE*4+1
          CALL DRAWPAL
        END IF
      END IF
      IF Y>=9 AND Y<=10 THEN
        IF X>=1 AND X<=3 THEN
          SELPAL=SELPALPAGE*4+2
          CALL DRAWPAL
        END IF
        IF X>=5 AND X<=7 THEN
          SELPAL=SELPALPAGE*4+3
          CALL DRAWPAL
        END IF
      END IF

      '** PAL PAGE **
      IF Y>=11 AND Y<=12 THEN
        IF X>=1 AND X<=2 THEN
          SELPALPAGE=0
          SELPAL=SELPAL MOD 4
          CALL READPAL
          CALL DRAWPAL
        END IF
        IF X>=6 AND X<=7 THEN
          SELPALPAGE=1
          SELPAL=(SELPAL MOD 4)+4
          CALL READPAL
          CALL DRAWPAL
        END IF
      END IF

      '** COLOR **
      IF Y>=7 AND Y<=8 THEN
        IF X>=11 AND X<=12 THEN
          SELCOL=0
          CALL DRAWSLIDERS
          CALL DRAWSELCOL
        END IF
        IF X>=13 AND X<=14 THEN
          SELCOL=1
          CALL DRAWSLIDERS
          CALL DRAWSELCOL
        END IF
        IF X>=15 AND X<=16 THEN
          SELCOL=2
          CALL DRAWSLIDERS
          CALL DRAWSELCOL
        END IF
        IF X>=17 AND X<=18 THEN
          SELCOL=3
          CALL DRAWSLIDERS
          CALL DRAWSELCOL
        END IF
      END IF

      '** RGB SLIDERS **
      IF Y>=9 AND Y<=12 AND X>=12 AND X<=17 THEN
        V=12-Y
        A=$D002+SELPAL*4+SELCOL
        C=PEEK(A)
        R=INT(C/16)
        G=INT(C/4) MOD 4
        B=C MOD 4
        IF X>=12 AND X<=13 THEN R=V
        IF X>=14 AND X<=15 THEN G=V
        IF X>=16 AND X<=17 THEN B=V
        C=R*16+G*4+B
        POKE A,C
        CALL DRAWSLIDERS
        CALL READPAL
      END IF

      OLDX=X
      OLDY=Y
    END IF
  ELSE
    OLDX=-1
  END IF
  WAIT VBL
LOOP

SUB DRAWCHARMENU
 BG COPY 0,0,20,16 TO 0,0
 ATTR (7)
 TEXT 1,8,"#"
 TEXT 5,8,"#"
 TEXT 1,10,"#"
 TEXT 5,10,"#"
 TEXT 12,12,"R"
 TEXT 14,12,"G"
 TEXT 16,12,"B"
 FOR I=0 TO 8 STEP 4
  SPRITE.A I+0,(6,0,0,0,0)
  SPRITE.A I+1,(6,1,0,0,0)
  SPRITE.A I+2,(6,0,1,0,0)
  SPRITE.A I+3,(6,1,1,0,0)
 NEXT I
 FOR I=12 TO 14
  SPRITE.A I,(7,0,0,0,1)
 NEXT I
 CALL DRAWTABBAR
 CALL DRAWCHARNUM
 CALL DRAWPAGE
 CALL DRAWPAL
 CALL DRAWSELCOL
END SUB

SUB DRAWCHARNUM
 ATTR (7)
 TEXT 1,5,"#"
 NUMBER 2,5,SELCHAR,3
 NUMBER 6,5,SELW+1,1
 TEXT 7,5,"*"
 NUMBER 8,5,SELH+1,1
 NUMBER 14,5,SELPAGE+1,1
 TEXT 15,5,"/4"
 IF SELCHAR>=SELPAGE*64 AND SELCHAR<SELPAGE*64+64 THEN
  N=SELCHAR MOD 64
  SX=8+(N MOD 16)*8
  SY=8+(N\16)*8
  SPRITE 0,SX-1,SY-1,36
  SPRITE 1,SX+SELW*8+1,SY-1,36
  SPRITE 2,SX-1,SY+SELH*8+1,36
  SPRITE 3,SX+SELW*8+1,SY+SELH*8+1,36
  HIDECOUNT=60
 ELSE
  CALL HIDESELCHAR
 END IF
END SUB

SUB HIDESELCHAR
 SPRITE OFF 0 TO 3
END SUB

SUB DRAWPAGE
 ATTR (0)
 CI=64
 FOR CY=1 TO 4
  FOR CX=1 TO 16
   CELL CX,CY,CI
   CI=CI+1
  NEXT CX
 NEXT CY
END SUB

SUB READPAGE
 COPY $A000+SELPAGE*$400,$400 TO $8400
END SUB

SUB READPAL
 COPY $D002+SELPALPAGE*16,16 TO $FF00
END SUB

SUB DRAWPAL
 ATTR (7)
 NUMBER 3,12,SELPALPAGE+1,1
 TEXT 4,12,"/2"
 C=SELPALPAGE*4
 NUMBER 2,8,C+0,1
 NUMBER 6,8,C+1,1
 NUMBER 2,10,C+2,1
 NUMBER 6,10,C+3,1
 CALL DRAWSLIDERS
 P=(SELPAL MOD 4)
 FOR CY=1 TO 4
  FOR CX=1 TO 16
   POKE $9001+(CY*32+CX)*2,P
  NEXT CX
 NEXT CY
 FOR CY=7 TO 8
  FOR CX=11 TO 18
   POKE $9001+(CY*32+CX)*2,P
  NEXT CX
 NEXT CY
 SX=8+(P MOD 2)*32
 SY=56+(P\2)*16
 SPRITE 4,SX,SY,36
 SPRITE 5,SX+16,SY,36
 SPRITE 6,SX,SY+8,36
 SPRITE 7,SX+16,SY+8,36
END SUB

SUB DRAWSLIDERS
 C=PEEK($D002+SELPAL*4+SELCOL)
 R=C\16
 G=C\4 MOD 4
 B=C MOD 4
 SPRITE 12,12*8,(12-R)*8,38
 SPRITE 13,14*8,(12-G)*8,38
 SPRITE 14,16*8,(12-B)*8,38
END SUB

SUB DRAWSELCOL
 SX=88+SELCOL*16
 SY=56
 SPRITE 8,SX,SY,36
 SPRITE 9,SX+8,SY,36
 SPRITE 10,SX,SY+8,36
 SPRITE 11,SX+8,SY+8,36
END SUB

