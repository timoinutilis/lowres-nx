FILESMENU:

CALL FILE2SEL
FILES
PALETTE 7,,%111111,%101010,%010101
PALETTE 6,,%001111,%000101,%000000
CALL DRAWFILESMENU
WAIT 20

DO
  IF TAP THEN
    X=TOUCH.X\8
    Y=TOUCH.Y\8
    IF X<=17 AND Y>=2 AND Y<=11 THEN
      SELFILE=Y-2+FILESOFFS
      CALL DRAWFILES
      CALL SEL2FILE
    END IF
    IF X>=18 THEN
      IF Y>=2 AND Y<=3 THEN
        FILESOFFS=0
        CALL DRAWFILES
      END IF
      IF Y>=10 AND Y<=11 THEN
        FILESOFFS=6
        CALL DRAWFILES
      END IF
    END IF
    IF Y>=13 AND Y<=14 THEN
      IF X>=1 AND X<=2 THEN GOTO DISKMENU
      IF X>=15 AND X<=16 THEN
       OK=0
       CALL BLOAD(OK)
       IF OK THEN GOTO DISKMENU
      END IF
      IF X>=17 AND X<=18 THEN
       OK=0
       CALL BSAVE(OK)
       IF OK THEN GOTO DISKMENU
      END IF
    END IF
  END IF

  WAIT VBL
LOOP

SUB DRAWFILESMENU
 BG SOURCE ROM(4)
 BG COPY 0,0,20,16 TO 0,0
 ATTR (6)
 TEXT 0,0,"LOAD/SAVE "+FTYPE$
 SPRITE OFF
 CALL DRAWFILES
END SUB

SUB DRAWFILES
 FOR I=0 TO 9
  N=I+FILESOFFS
  IF N=SELFILE THEN ATTR (6) ELSE ATTR (7)
  NUMBER 0,2+I,N,2
  TEXT 2,2+I,":               "
  TEXT 3,2+I,LEFT$(FILE$(N),15)
 NEXT I
END SUB

SUB FILE2SEL
 IF FTYPE$="PALETTES" THEN SELFILE=PALFILE
 IF FTYPE$="CHARACTERS" THEN SELFILE=CHARFILE
 IF FTYPE$="BACKGROUND" THEN SELFILE=BGFILE
END SUB

SUB SEL2FILE
 IF FTYPE$="PALETTES" THEN PALFILE=SELFILE
 IF FTYPE$="CHARACTERS" THEN CHARFILE=SELFILE
 IF FTYPE$="BACKGROUND" THEN BGFILE=SELFILE
END SUB

SUB BLOAD(OK)
OK=0
 IF SELFILE=-1 THEN
  CALL SHOWMESSAGE("SELECT FILE")
  EXIT SUB
 END IF
 IF FTYPE$="PALETTES" THEN CALL BLOADPAL
 IF FTYPE$="CHARACTERS" THEN CALL BLOADCHR
 IF FTYPE$="BACKGROUND" THEN CALL BLOADBG
 CALL SHOWMESSAGE(FTYPE$+" LOADED")
 OK=-1
END SUB

SUB BSAVE(OK)
 OK=0
 IF SELFILE=-1 THEN
  CALL SHOWMESSAGE("SELECT FILE")
  EXIT SUB
 END IF
 IF FTYPE$="PALETTES" THEN CALL BSAVEPAL
 IF FTYPE$="CHARACTERS" THEN
  CALL SHOWMESSAGE("NOT SUPPORTED")
  EXIT SUB
 END IF
 IF FTYPE$="BACKGROUND" THEN CALL BSAVEBG
 CALL DRAWFILES
 CALL SHOWMESSAGE(FTYPE$+" SAVED")
 OK=-1
END SUB

'======================

SUB BLOADBG
 FILL $B000,2+MAPW*MAPH*2,0
 POKE $B000,20
 POKE $B001,16
 LOAD BGFILE,$B000
 MAPW=PEEK($B000)
 MAPH=PEEK($B001)
END SUB

SUB BSAVEBG
 F$=FILE$(BGFILE)
 IF F$="" THEN F$="BG"
 SAVE BGFILE,F$,$B000,2+MAPW*MAPH*2
END SUB

SUB BLOADCHR
 LOAD CHARFILE,$A000
END SUB

SUB BLOADPAL
 LOAD PALFILE,$D002
END SUB

SUB BSAVEPAL
 F$=FILE$(PALFILE)
 IF F$="" THEN F$="PALETTES"
 SAVE PALFILE,F$,$D002,32
END SUB

