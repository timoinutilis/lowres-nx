SIZEMENU:
PALETTE 7,,%111111,%101010,%010101
PALETTE 6,,%001111,%000101,%000000
GLOBAL NEWW,NEWH
NEWW=MAPW
NEWH=MAPH
SPRITE OFF
CALL DRAWSIZEMENU
CALL DRAWSIZE
WAIT 20

DO
  IF TAP THEN
    X=TOUCH.X\8
    Y=TOUCH.Y\8
    IF X>=4 AND X<=9 THEN
      IF Y>=4 AND Y<=5 THEN
        NEWW=20
        CALL DRAWSIZE
      END IF
      IF Y>=6 AND Y<=7 THEN
        NEWW=32
        CALL DRAWSIZE
      END IF
      IF Y>=8 AND Y<=9 THEN
        NEWW=64
        CALL DRAWSIZE
      END IF
      IF Y>=10 AND Y<=11 THEN
        NEWW=96
        CALL DRAWSIZE
      END IF
      IF Y>=12 AND Y<=13 THEN
        NEWW=128
        CALL DRAWSIZE
      END IF
    END IF
    IF X>=12 AND X<=17 THEN
      IF Y>=4 AND Y<=5 THEN
        NEWH=16
        CALL DRAWSIZE
      END IF
      IF Y>=6 AND Y<=7 THEN
        NEWH=32
        CALL DRAWSIZE
      END IF
      IF Y>=8 AND Y<=9 THEN
        NEWH=64
        CALL DRAWSIZE
      END IF
      IF Y>=10 AND Y<=11 THEN
        NEWH=96
        CALL DRAWSIZE
      END IF
      IF Y>=12 AND Y<=13 THEN
        NEWH=128
        CALL DRAWSIZE
      END IF
    END IF

    IF Y>=14 THEN
      IF X>=9 AND X<=11 THEN
        IF NEWW*NEWH*2<=8192 THEN
         CALL BCHANGESIZE
         GOTO DISKMENU
        END IF
      END IF
      IF X>=13 THEN GOTO DISKMENU
    END IF
  END IF
  WAIT VBL
LOOP

SUB DRAWSIZEMENU
 ATTR (7)
 BG FILL 0,0 TO 19,15 CHAR 128
 ATTR (6)
 TEXT 0,0,"      BG SIZE       "
 ATTR (7)
 TEXT 3,2,"WIDTH"
 TEXT 5,4,"20"
 TEXT 5,6,"32"
 TEXT 5,8,"64"
 TEXT 5,10,"96"
 TEXT 5,12,"128"
 TEXT 11,2,"HEIGHT"
 TEXT 13,4,"16"
 TEXT 13,6,"32"
 TEXT 13,8,"64"
 TEXT 13,10,"96"
 TEXT 13,12,"128"
 TEXT 10,14,"OK"
 TEXT 13,14,"CANCEL"
END SUB

SUB DRAWSIZE
 NUMBER 1,14,NEWW,3
 TEXT 4,14,"*"
 NUMBER 5,14,NEWH,3
 IF NEWW*NEWH*2>8192 THEN
  TEXT 1,15,"TOO BIG"
 ELSE
  TEXT 1,15,"       "
 END IF
END SUB

SUB BCHANGESIZE
 IF NEWW>MAPW THEN
  FOR Y=NEWH-1 TO 0 STEP -1
   S=$B002+Y*MAPW*2
   D=$B002+Y*NEWW*2
   N=MAPW*2
   COPY S,N TO D
   FILL D+N,(NEWW-MAPW)*2
  NEXT Y
 ELSE IF NEWW<MAPW THEN
  FOR Y=0 TO NEWH-1
   COPY $B002+Y*MAPW*2,NEWW*2 TO $B002+Y*NEWW*2
  NEXT Y
 END IF
 IF NEWH>MAPH THEN FILL $B002+MAPH*NEWW*2,(NEWH-MAPH)*NEWW*2
 MAPW=NEWW
 MAPH=NEWH
 POKE $B000,MAPW
 POKE $B001,MAPH
 MAPX=0
 MAPY=0
 CALL SHOWMESSAGE("SIZE CHANGED")
END SUB

